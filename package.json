{
  "name": "scarlet",
  "version": "1.3.3",
  "author": "Australian Armed Forces <omega@sinn.io>",
  "description": "Scarlet is a mod updater for the Australian Armed Forces",
  "main": "./lib/app.js",
  "scripts": {
    "build-agent": "cargo-cp-artifact -nc lib/agent.node -- cargo build --message-format=json-render-diagnostics",
    "build-agent-release": "cargo-cp-artifact -nc lib/agent.node -- cargo build --message-format=json-render-diagnostics",
    "build-electron": "tsc && copyfiles -E -f ./src/client/*.js ./lib/client",
    "build": "npm run build-agent-release && npm run build-electron",
    "start": "npm run build && electron ./lib/app.js",
    "deploy": "npm run build && electron-builder build --win --publish always --config electron-builder.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sifex/scarlet.git"
  },
  "private": true,
  "productName": "Scarlet",
  "dependencies": {
    "electron-updater": "^4.6.1",
    "fast-xml-parser": "^4.4.0"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1",
    "copyfiles": "^2.4.1",
    "electron": "31.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.0.4"
  }
}
