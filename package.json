{
  "name": "Scarlet",
  "version": "1.3.3",
  "author": "Australian Armed Forces <omega@sinn.io>",
  "description": "Scarlet is a mod updater for the Australian Armed Forces",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --macos --publish never --config electron-builder.yml",
    "deploy": "electron-builder build --win --publish always --config electron-builder.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sifex/scarlet.git"
  },
  "private": true,
  "productName": "Scarlet",
  "dependencies": {
    "electron-updater": "^4.6.1",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "electron": "^16.2.6",
    "electron-builder": "^22.14.5"
  },
  "build": {
    "appId": "com.aaf.ScarletUpdater",
    "protocols": {
      "name": "scarlet-updater",
      "schemes": [
        "scarlet"
      ]
    },
    "mac": {
      "category": "public.updater"
    },
    "win": {}
  }
}
