{
  "name": "Scarlet",
  "version": "1.2.7",
  "author": "Omega <omega@sinn.io>",
  "description": "Scarlet is a mod updater for the Australian Armed Forces",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never --config electron-builder.yml",
    "deploy": "electron-builder build --win --publish always --config electron-builder.yml"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/sifex/scarlet.git"
  },
  "private": true,
  "productName": "Scarlet",
  "dependencies": {
    "electron-updater": "^4.3.0",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1"
  },
  "build": {
    "appId": "com.scarlet.Updater",
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "./agent/",
        "to": "agent",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    }
  }
}
